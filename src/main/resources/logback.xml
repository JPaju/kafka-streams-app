<configuration>
  <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{HH:mm:ss.SSS} %-5level %logger{36} [%t] - %msg%n</pattern>
    </encoder>
  </appender>

  <logger name="org.apache.kafka" level="WARN" />

  <root level="INFO">
    <appender-ref ref="CONSOLE" />
  </root>
</configuration>
